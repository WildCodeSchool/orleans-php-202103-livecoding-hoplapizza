{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/dish.css">
{% endblock %}

{% block content %}
	<header>
		<h1 class="m-2">Notre carte</h1>
	</header>

	<main class="container">
		<h2 class="mt-4">Nos plats</h2>

		<div class="row">
			{% for dish in dishes %}
				<div class="col-md-6">
					<div class="dish-card card mb-3">
						<div class="row g-0">
							<div class="col-md-4">
								<img class="w-100" src="{{ dish.image }} " alt="Photo du plat {{ dish.name}}">
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h3 class="card-title">{{ dish.name}}</h3>
									<p class="card-text">{{ dish.description }}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</main>
{% endblock %}
